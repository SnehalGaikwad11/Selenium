package com.bridgelabz;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.interactions.Actions;

public class DragDrop {

	public static void main(String[] args) throws InterruptedException {
		
		System.setProperty("webdriver.chrome.driver", "./driver/chromedriver");
		WebDriver driver = new ChromeDriver();
		//for maximize window
        driver.manage().window().maximize();
        driver.manage().deleteAllCookies();
        
        driver.get("https://jqueryui.com");
        //it will switch from here to here
      driver.switchTo().frame("demo-frame");
        
        driver.findElement(By.linkText("Download")).click();
        Thread.sleep(200);
        driver.findElement(By.linkText("Demos")).click();
        
        WebElement Drag = driver.findElement(By.xpath("//a[contains(text(),'Draggable')]"));
        WebElement Drop = driver.findElement(By.xpath("//a[contains(text(),'Droppable')]"));
        
        //to perform drag and drop
        Actions action=new Actions(driver);
        action.clickAndHold(Drag)
        .moveToElement(Drop)
        .release()
        .build()
        .perform();

	}

}
